ng-view
  position: absolute
  width: 100%
  height: 100%

.g-view, g-view
  
  .bar-nav~.content, .bar~.content
    top: header-height-normal
    padding-top: 0
    
  .bar-header-secondary~.content
    top: header-height-normal * 2

  .content
    background-color: #fafafa;
    
    &.with-footer
      bottom: footer-height-normal
      
    &.without-footer
      bottom: 0
      
.ng-animate
  -webkit-animation-duration: 1s
  animation-duration: 1s
  -webkit-animation-fill-mode: both
  animation-fill-mode: both

.ng-enter
  -webkit-animation: slideInRight 0.3s both ease-in
  z-index: 8888

.ng-leave
  -webkit-animation: slideOutLeft 0.3s both ease-in
  z-index: 9999