
.container
  padding-right: 15px
  padding-left: 15px
  margin-right: auto
  margin-left: auto
  
.text-center
  text-align: center

.center-block
  display: block
  margin-left: auto
  margin-right: auto
  
.show
  display: block !important

.hidden
  display: none !important
  visibility: hidden !important

.invisible
  visibility: hidden

.clearfix
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both
    
.img-responsive
  max-width: 100%
  height: auto
  display: block